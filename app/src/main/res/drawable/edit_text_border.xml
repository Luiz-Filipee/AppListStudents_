<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Defina a forma do botão -->
    <item>
        <shape android:shape="rectangle">
            <!-- Cor de fundo do botão -->
            <solid android:color="@color/backgroud_edit_Text"
                />
            <!-- Borda do botão -->
            <stroke
                android:width="1dp"
                android:color="@color/hint"
                />
            <!-- Padding do conteúdo dentro do botão -->
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>